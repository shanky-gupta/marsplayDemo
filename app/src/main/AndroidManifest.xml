<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="marsplay.com.views">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="marsplay.com.views.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name="marsplay.com.views.HomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="marsplay.com.views.CameraActivity"
            android:label="@string/app_name" />
        <activity
            android:name="marsplay.com.views.ImageListActivity"
            android:label="@string/app_name" />
        <activity
            android:name="marsplay.com.views.UploadingPageActivity"
            android:label="@string/app_name" />
        <activity
            android:name="marsplay.com.views.ImageActivity"
            android:label="@string/app_name" />
    </application>

</manifest>