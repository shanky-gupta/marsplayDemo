<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/upload_from_gallery"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/upload_from_gallery" />

        <Button
            android:id="@+id/upload_from_camera"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upload_from_gallery"
            android:layout_marginTop="10dp"
            android:text="@string/upload_from_camera" />

        <Button
            android:id="@+id/View_uploaded_image"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upload_from_camera"
            android:layout_marginTop="10dp"
            android:text="@string/View_uploaded_image" />
    </RelativeLayout>

</RelativeLayout>